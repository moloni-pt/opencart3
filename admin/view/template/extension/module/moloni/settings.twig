                                            <div class="well well-sm" style="height: 150px; overflow: auto;">
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox" name="moloni[update_import_products_name]" id="update_import_products_name" value="1" checked>
                                                        {{label.update_import_products_name}}
                                                    </label>
                                                </div>
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox" name="moloni[update_import_products_stock]" id="update_import_products_stock" value="1" checked>
                                                        {{label.update_import_products_stock}}
                                                    </label>
                                                </div>
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox" name="moloni[update_import_products_price]" id="update_import_products_price" value="1" checked>
                                                        {{label.update_import_products_price}}
                                                    </label>
                                                </div>
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox" name="moloni[update_import_products_image]" id="update_import_products_image" value="1" checked>
                                                        {{label.update_import_products_image}}
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label"><span data-toggle="tooltip" title="" data-original-title="{{ tooltip.import_products|escape('html') }}">{{label.import_products}}</span></label>
                                        <div class="col-sm-10">
                                            <button type="submit" id="btnImportMoloni" form="moloni-tools-hidden" data-toggle="tooltip" title="Import products" class="btn btn-primary">Import products</button>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>

                            <div class="tab-pane" id="tab-developer">
                                <fieldset>
                                    <legend>{{label.developer}}</legend>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label"><span data-toggle="tooltip" title="" data-original-title="{{ tooltip.debug_console|escape('html') }}">{{label.debug_console}}</span></label>
                                        <div class="col-sm-10">
                                            <label class="radio-inline"><input type="radio" name="moloni[debug_console]" value="1" {{ options.debug_console == "1" ? 'checked="checked"' : ""}}>
                                                {{label.yes}}
                                            </label>
                                            <label class="radio-inline"><input type="radio" name="moloni[debug_console]" value="0" {{ options.debug_console == "0" ? 'checked="checked"' : ""}}>
                                                {{label.no}}
                                            </label>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label"><span data-toggle="tooltip" title="" data-original-title="{{ tooltip.git_username|escape('html') }}">{{label.git_username}}</span></label>
                                        <div class="col-sm-10">
                                            <input type="text" name="moloni[git_username]" value="{{ options.git_username }}" id="input-name" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label"><span data-toggle="tooltip" title="" data-original-title="{{ tooltip.git_repository|escape('html') }}">{{label.git_repository}}</span></label>
                                        <div class="col-sm-10">
                                            <input type="text" name="moloni[git_repository]" value="{{ options.git_repository }}" id="input-name" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label"><span data-toggle="tooltip" title="" data-original-title="{{ tooltip.git_branch|escape('html') }}">{{label.git_branch}}</span></label>
                                        <div class="col-sm-10">
                                            <input type="text" name="moloni[git_branch]" value="{{ options.git_branch }}" id="input-name" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">
                                            {{label.download_logs}}
                                        </label>
                                        <div class="col-sm-10">
                                            {% if  content.settings_values.log_url != '' %}
                                                <a title="{{label.download_logs}}" class="btn btn-primary" href="{{ content.settings_values.log_url }}">{{label.download_logs}}</a>
                                            {% else %}
                                                <button class="btn btn-primary" title="{{label.download_logs}}" disabled>{{label.download_logs}}</button>
                                            {% endif %}
                                        </div>
                                    </div>
                            </div>
                            </fieldset>
                        </div>
                </form>
                <form action="{{ url.import_products }}" method="post" enctype="multipart/form-data" id="moloni-tools-hidden">
                    <input type="hidden" name="moloni[import_tax_class_hidden]" value="" id="import_tax_class_hidden"/>
                    <input type="hidden" name="moloni[import_product_since_date_hidden]" value="" id="import_product_since_date_hidden"/>
                    <input type="hidden" name="moloni[update_import_products_name_hidden]" value="" id="update_import_products_name_hidden"/>
                    <input type="hidden" name="moloni[update_import_products_stock_hidden]" value="" id="update_import_products_stock_hidden"/>
                    <input type="hidden" name="moloni[update_import_products_price_hidden]" value="" id="update_import_products_price_hidden"/>
                    <input type="hidden" name="moloni[update_import_products_image_hidden]" value="" id="update_import_products_image_hidden"/>
                </form>
            </div>
        </div>

    </div>

    <script>
        $('.date').datetimepicker({
            language: '{{ datepicker }}',
            pickTime: false
        });

        $("#btnImportMoloni").click(function() {
            $("#import_product_since_date_hidden").val(document.getElementById('import_product_since_date').value);
            $("#import_tax_class_hidden").val($("#import_tax_class").val());
            document.getElementById('update_import_products_name_hidden').value = $("#update_import_products_name").is(":checked") ? 1 : 0 ;
            document.getElementById('update_import_products_stock_hidden').value = $("#update_import_products_stock").is(":checked") ? 1 : 0 ;
            document.getElementById('update_import_products_price_hidden').value = $("#update_import_products_price").is(":checked") ? 1 : 0 ;
            document.getElementById('update_import_products_image_hidden').value = $("#update_import_products_image").is(":checked") ? 1 : 0 ;
        });
    </script>
